<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    tools:context=".Dynamic">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="165dp"
        android:gravity="center_horizontal"
        android:text="Dynamic Lighting Effects"
        android:textColor="@android:color/white"
        android:textSize="50dp"
        app:layout_constraintBottom_toTopOf="@+id/fade"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/fade"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginBottom="66dp"
        android:backgroundTint="#0009FF"
        android:text="Fade"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toTopOf="@+id/smooth"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/smooth"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginBottom="64dp"
        android:backgroundTint="#0009FF"
        android:text="Smooth"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toTopOf="@+id/flash"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fade" />

    <Button
        android:id="@+id/strobe"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginBottom="94dp"
        android:backgroundTint="#0009FF"
        android:text="Strobe"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/flash" />

    <Button
        android:id="@+id/flash"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginBottom="66dp"
        android:backgroundTint="#0009FF"
        android:text="Flash"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toTopOf="@+id/strobe"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/smooth" />

</androidx.constraintlayout.widget.ConstraintLayout>